---
import "../styles/main.css";
import "../styles/queries.css";
import "../styles/github.min.css";

interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  canonical?: string;
}

const {
  title,
  description,
  keywords,
  image = "./index-og.png",
  canonical,
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <link rel="shortcut icon" href="/img/favicon.png" />
    <title>{title}</title>
    <link rel="sitemap" href="/sitemap-index.xml" />
    {canonical && <link rel="canonical" href={canonical} />}
    <!-- STYLESHEET -->

    <script
      src="https://cdn.metricalp.com/event/metricalp.js"
      data-tid="mam195"
      defer></script>
  </head>

  <body>
    <div id="container">
      <header>
        <h1>
          <a href="/">
            <img src="/img/ed-logo.svg" alt="Site de Emmanuel Demey" /></a
          >
        </h1>
        <nav id="main-nav">
          <p class="skip">
            <a href="#wrapper">Main navigation (Skip menu)</a>
          </p>
          <ul>
            <li><a href="/articles.html"> Articles</a></li>
            <li><a href="/trainings.html"> Trainings</a></li>
            <li><a href="/events.html"> Events</a></li>
          </ul>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <aside class="about">
        <h2>
          <img src="/img/ed-logo-min.svg" alt="About Emmanuel Demey" />
        </h2>
        <div class="content">
          <p>
            Emmanuel Demey is a freelance developer, consultant, and trainer
            working on various web-related topics.
          </p>
          <p>
            Speaker, conference organizer, podcaster, and author of the book
            Progressive Web App for ENI.
          </p>
          <ul>
            <li>
              <a
                target="_blank"
                rel="noreferrer noopener"
                href="mailto:demey.emmanuel@gmail.com">Email</a
              >
            </li>
            <li>
              <a
                target="_blank"
                rel="noreferrer noopener"
                href="https://devlille.fr/">DevLille</a
              >
            </li>
            <li>
              <a
                target="_blank"
                rel="noreferrer noopener"
                href="https://www.linkedin.com/in/emmanueldemey/"
                >My LinkedIn Profile</a
              >
            </li>
            <li>
              <a
                target="_blank"
                rel="noreferrer noopener"
                href="https://bsky.app/profile/emmanueldemey.dev"
                >Follow me on Bluesky</a
              >
            </li>
          </ul>
        </div>
      </aside>

      <footer>
        <p class="copyright">&copy; Emmanuel Demey, 2025</p>
      </footer>
    </div>
  </body>
</html>
